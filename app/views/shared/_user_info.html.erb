<a href="<%= user_path(current_user) %>">
  <% if current_user.avatar.exists? then %>
        <div class="img">
			<%= image_tag current_user.avatar.url(:thumb)%>
        </div>
	<% else %>
        <i class="icon-user"></i>
	<% end %>
</a>
<h1>
  <%= current_user.name %>
</h1>
<span>
  <%= link_to "view my profile", current_user %>
</span>
<span>
  <%= pluralize(current_user.forms.count, "form") %>
</span>